@using kiki.shared

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">
            <button class="btn btn-link collapsed" type="button" @onclick="Toggle">
                @Post.Title
            </button>
        </h2>
    </div>

    <div class="@CollapseCss">
        <div class="card-body">
            @Post.Content
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Post Post { get; set; }
    public bool collapse = true;

    private string CollapseCss => collapse ? "collapse" : null;

    public void Toggle() {
        collapse = !collapse;
    }
}
